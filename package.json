{
  "name": "lyrics",
  "version": "1.0.0",
  "description": "https://aadamcz.github.io/lyrics/.",
  "main": "index.js",
  "dependencies": {
    "browser-sync": "^2.18.13",
    "node-sass": "^4.7.1",
    "nodemon": "^1.12.1",
    "npm-run-path": "^1.0.0"
  },
  "devDependencies": {
    "autoprefixer-cli": "^1.0.0",
    "glob-run": "^0.1.6",
    "jshint": "^2.9.5",
    "nu-html-checker": "^0.1.0",
    "onchange": "^3.2.1",
    "parallelshell": "^3.0.2",
    "rimraf": "^2.6.2"
  },
  "scripts": {
    "test": "npm run test:html && npm run test:js",
    "test:html": "glob-run nu-html-checker *.html",
	"test:js": "node_modules/.bin/jshint js/",
    "build": "npm run build:sass && npm run build:autoprefixer && npm run test",
    "build:clean": "rimraf css/*.css",
    "build:sass": "sass --sourcemap=none --update sass:css",
    "build:autoprefixer": "autoprefixer-cli css/style.css",
    "watch:browsersync": "node_modules/.bin/browser-sync start --server --files css/*.css *.html",
    "watch": "parallelshell \"npm run watch:sass\" \"npm run watch:autoprefixer\" ",
    "watch:sass": "sass --watch sass:css",
    "watch:autoprefixer": "onchange -d 100 css/style.css -- autoprefixer-cli -o css/style.prefixed.css css/*.css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aadamcz/lyrics.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/aadamcz/lyrics/issues"
  },
  "homepage": "https://github.com/aadamcz/lyrics#readme"
}
